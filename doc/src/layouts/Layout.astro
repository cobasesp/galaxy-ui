---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Galaxy UI documentation" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://galaxy-ui.surge.sh/css/galaxy-ui.dev.css">
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body>
		<nav class="navbar navbar-sticky">
			<div class="navbar-content navbar-fullwidth">
				<div class="burger-button">
					<span></span>
					<span></span>
					<span></span>
				</div>
				<a href="" class="logo">Galaxy UI</a>
				<ul class="menu">
					<li><a href="/documentation/getting-started">Documentation</a></li>
					<li><a href="#">Changelog</a></li>
					<li><a href="#">Issues</a></li>
					<li>
						<button class="btn btn-sm btn-info btn-neon-animated theme-toggle" data-themetoggle="dark">
							<span class="material-symbols-rounded darkmode active">
								dark_mode
							</span>
							<span class="material-symbols-rounded lightmode">
								light_mode
							</span>
						</button>
					</li>
				</ul>
			</div>
		</nav>
		<div class="container-with-sidebar">
			<div class="wrapper">&times;</div>
			<div class="sidebar">
				<div class="heading success">First steps</div>
				<ul>
					<li class={currentPath === "documentation/getting-started" ? "active" : ""}><a href="/documentation/getting-started">Getting started</a></li>
					<li><a href="">Installation</a></li>
				</ul>
	
				<div class="heading info">Layout</div>
				<ul>
					<li><a href="">Containers</a></li>
					<li><a href="">Sidebar</a></li>
					<li><a href="">Grid system</a></li>
					<li><a href="">Flex</a></li>
				</ul>

				<div class="heading danger">Components</div>
				<ul>
					<li><a href="">Navbar</a></li>
					<li><a href="">Pagination</a></li>
					<li><a href="">Modals</a></li>
					<li><a href="">Tabs</a></li>
					<li><a href="">Breadcrumbs</a></li>
					<li><a href="">Accordions</a></li>
				</ul>

				<div class="heading warning">Elements</div>
				<ul>
					<li><a href="">Card</a></li>
					<li><a href="">Inputs</a></li>
					<li><a href="">Buttons</a></li>
					<li><a href="">Floating Buttons</a></li>
					<li><a href="">Progress bar</a></li>
					<li><a href="">Tags</a></li>
					<li><a href="">Tables</a></li>
					<li><a href="">Icons</a></li>
				</ul>

				<div class="heading danger">Other</div>
				<ul>
					<li><a href="">Helpers</a></li>
					<li><a href="">Margins and paddings</a></li>
				</ul>
			</div>
			<div class="container">
				<div class="spacer"></div>
				<slot />
			</div>
		<script src="https://galaxy-ui.surge.sh/js/galaxy-bundle.dev.js"></script>
	</body>
</html>